{% extends "base.html.jinja" %}
{% from "components/ui.html.jinja" import section_heading %}
{% block title %}
    PlexAniBridge - Settings
{% endblock title %}
{% block content %}
    <div class="space-y-8">
        {{ section_heading('lucide:settings', 'Settings', 'Read-only view of the currently loaded configuration. To change settings, edit your environment variables or configuration file and restart the application.', None) }}
        <div class="grid gap-6 md:grid-cols-3">
            <div class="md:col-span-1 space-y-2">
                <h3 class="font-medium text-slate-200 text-sm tracking-wide">Global</h3>
                <ul class="rounded-md border border-slate-800 bg-slate-900/50 p-4 text-[11px] space-y-1">
                    {% for key, value in global_config.items() %}
                        <li class="flex gap-2">
                            <span class="text-slate-500 min-w-40 break-all">{{ key }}</span>
                            <span class="break-all text-slate-300">
                                {% if value is none %}
                                    <span class="text-slate-600 italic">(unset)</span>
                                {% else %}
                                    {% if value is string %}
                                        {{ value }}
                                    {% else %}
                                        {{ value | tojson }}
                                    {% endif %}
                                {% endif %}
                            </span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="md:col-span-2 space-y-4">
                <div class="flex items-center gap-2">
                    <h3 class="font-medium text-slate-200 text-sm tracking-wide">Profiles</h3>
                    <span class="text-[11px] text-slate-500">({{ profiles | length }})</span>
                </div>
                {% if profiles %}
                    <div class="space-y-6">
                        {% for profile in profiles %}
                            <div class="rounded-md border border-slate-800 bg-slate-900/50">
                                <div class="px-4 py-2 border-b border-slate-800 flex items-center gap-2">
                                    <iconify-icon icon="lucide:user" class="text-slate-400" inline></iconify-icon>
                                    <span class="font-medium text-slate-200">{{ profile.name }}</span>
                                </div>
                                <div class="p-4">
                                    <ul class="text-[11px] space-y-1">
                                        {% for key, value in profile.settings.items() %}
                                            <li class="flex gap-2">
                                                <span class="text-slate-500 min-w-40 break-all">{{ key }}</span>
                                                <span class="break-all text-slate-300">
                                                    {% if value is none %}
                                                        <span class="text-slate-600 italic">(unset)</span>
                                                    {% else %}
                                                        {% if value is string %}
                                                            {{ value }}
                                                        {% else %}
                                                            {{ value | tojson }}
                                                        {% endif %}
                                                    {% endif %}
                                                </span>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-xs text-slate-500">No profiles loaded.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock content %}
